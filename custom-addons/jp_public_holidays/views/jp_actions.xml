<odoo>
  <!-- Window action for the Import Wizard -->
  <record id="ir_action_import_wizard" model="ir.actions.act_window">
    <field name="name">Import JP Holidays</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">jp.holiday.import.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <field name="context">
      {
        'default_year': 2025
      }
    </field>
    <!-- IMPORTANT: this ref must match the id in jp_holiday_import_wizard_views.xml -->
    <field name="view_id" ref="view_jp_holiday_import_wizard"/>
  </record>
</odoo>
