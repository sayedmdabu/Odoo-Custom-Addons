<odoo>
  <record id="view_jp_holiday_import_wizard" model="ir.ui.view">
    <field name="name">jp.holiday.import.wizard.form</field>
    <field name="model">jp.holiday.import.wizard</field>
    <field name="arch" type="xml">
      <form string="Import JP Holidays">
        <group>
          <field name="year"/>
          <field name="file" filename="filename"/>
          <field name="filename" invisible="1"/>
          <field name="note" readonly="1"/>
        </group>
        <footer>
          <button name="action_import" type="object" string="Import from CSV" class="btn-secondary"/>
          <button name="action_fetch_api" type="object" string="Fetch from API" class="btn-primary"/>
          <button string="Close" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
