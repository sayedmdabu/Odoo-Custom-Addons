<odoo>

  <!-- LIST view -->
  <record id="view_jp_holiday_list" model="ir.ui.view">
    <field name="name">jp.holiday.list</field>
    <field name="model">jp.holiday</field>
    <field name="arch" type="xml">
      <list string="Japan Holidays" create="false">
        <control>
          <!-- This resolves only if ir_action_import_wizard already exists -->
          <button name="%(jp_public_holidays.ir_action_import_wizard)d"
                  type="action"
                  class="btn-primary"
                  string="Import JP Holidays"/>
        </control>
        <field name="date"/>
        <field name="name"/>
        <field name="year"/>
      </list>
    </field>
  </record>

  <!-- FORM view -->
  <record id="view_jp_holiday_form" model="ir.ui.view">
    <field name="name">jp.holiday.form</field>
    <field name="model">jp.holiday</field>
    <field name="arch" type="xml">
      <form string="Japan Holiday">
        <sheet>
          <group>
            <field name="date"/>
            <field name="name"/>
            <field name="year" readonly="1"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- ACTION: main list/form action (kept only here) -->
  <record id="action_jp_holiday" model="ir.actions.act_window">
    <field name="name">Japan Holidays</field>
    <field name="res_model">jp.holiday</field>
    <field name="view_mode">list,form</field>
    <field name="view_id" ref="view_jp_holiday_list"/>
    <field name="context">
      {
        'search_default_current_year': 1,
        'default_year': 2025
      }
    </field>
  </record>

  <!-- MENUS -->
  <menuitem id="menu_jp_root" name="JP Holidays"/>
  <menuitem id="menu_jp_holidays" name="Holidays"
            parent="menu_jp_root" action="action_jp_holiday"/>

</odoo>
